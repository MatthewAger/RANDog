<div class="d-flex h-100 justify-content-center align-items-center">
  <% if dog.errors.any? %>
    <div class="text-danger">
      <% dog.errors.full_messages.each do |message| %>
        <%= message %><br>
      <% end %>
    </div>
  <% elsif dog.url %>
    <h1 class='position-absolute ms-2 mt-2 text-white'><%= params[:breed].capitalize %></h1>
    <%= image_tag dog.url, alt: params[:breed], class: "img-fluid" %>
  <% else %>
    Enter a breed name to see a dog!
  <% end %>
</div>
